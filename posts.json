---
layout: null
permalink: /posts.json
---
[
  {% for post in site.posts %}
  {
    "slug": "{{ post.url | remove: '.html' | split: '/' | join: '-' | remove_first: '-' }}",
    "url": "{{ post.url | relative_url }}",
    "title": {{ post.title | jsonify }},
    "date": "{{ post.date | date: '%-d %b, %Y' }}",
    "dateISO": "{{ post.date | date_to_xmlschema }}",
    "image": {% if post.image %}"{{ post.image | relative_url }}"{% else %}null{% endif %},
    "tags": {{ post.tags | jsonify }},
    "excerpt": {{ post.excerpt | strip_html | truncate: 100 | jsonify }},
    "readTime": {{ post.content | number_of_words | divided_by: 200 | plus: 1 }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
